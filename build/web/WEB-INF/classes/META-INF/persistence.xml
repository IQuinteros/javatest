<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="TestingPU" transaction-type="RESOURCE_LOCAL">
    <class>entidades.Administrador</class>
    <class>entidades.Receta</class>
    <class>entidades.Cliente</class>
    <class>entidades.RecetaFavorito</class>
    <class>entidades.Adopcion</class>
    <class>entidades.Mascota</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/javatest?zeroDateTimeBehavior=CONVERT_TO_NULL&amp;useUnicode=yes&amp;characterEncoding=UTF-8"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
